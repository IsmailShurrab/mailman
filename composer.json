{
    "name": "IsmailShurrab/mailman",
    "description": "Easier email sending for Laravel 5 with CSS inlining.",
    "keywords": [
        "ismail",
        "laravel",
        "email",
        "mailman",
        "mailer"
    ],
    "license": "MIT",
    "authors": [{
        "name": "IsmailShurrab",
        "email": "info@waavi.com",
        "homepage": "http://waavi.com"
    }],
    "require": {
        "tijsverkoyen/css-to-inline-styles": "2.*",
        "illuminate/view": "^5.0|^6.0|^7.0|^8.0",
        "illuminate/support": "^5.0|^6.0|^7.0|^8.0",
        "illuminate/queue": "^5.0|^6.0|^7.0|^8.0",
        "illuminate/mail": "^5.0|^6.0|^7.0|^8.0",
    },
    "require-dev": {
         "mockery/mockery" : "0.9.*",
         "phpunit/phpunit" : "4.7.*",
         "orchestra/testbench": "^3.1",
    },
    "autoload": {
        "psr-4": {
            "Waavi\\Mailman\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Waavi\\Mailman\\Test\\": "tests"
        }
    },
    "minimum-stability": "dev",
    "scripts": {
        "test": "vendor/bin/phpunit"
    }
}
